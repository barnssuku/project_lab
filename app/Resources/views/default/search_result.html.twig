{# empty Twig template #}
{% extends "base.html.twig" %}

{% block title %}
   Search Project.
{% endblock %}

{% block body %}
    <!-- div container -->
    <div class="container">
        <!-- div project display panel -->
        <div class="row drop-top drop-bottom">

            <!-- project list -->
            <div id="project-list" class="col-md-4 drop-top">
                <div class="list-group" id="list-tab" role="tablist">
                    <!-- investigate how we can add object directly from session 
                    into twig -->
                    {% for project in project_searched %} 
                        {% for proj in project %}                            
                            <div class="list-group-item list-group-item-action flex-column align-items-start active my-list {{ 'item_'~loop.index0 }}" id="{{ loop.index0 }}">
                                <div class="d-flex w-100 justify-content-between">
                                    <h5 class="mb-1">{{ proj.projectTopic }}</h5>
                                </div>
                                <small>{{ proj.department }}</small>
                                <small>{{ proj.dateWritten|date("d/m/Y") }}</small>
                                {% for keyword in proj.keywords %}
                                    <span class="badge badge-light">{{ keyword }}</span>
                                {% endfor %}
                            </div>                            
                        {% endfor %}
                    {% endfor %}                    
                </div>
                <div class="row">
                	<div class="col add-btn-container">
                		<a href="{{ path('add_project') }}" class="btn btn-block btn-lg btn-outline-primary">Add project</a>
                	</div>
                </div>                
            </div>
            <!-- end #project-list -->

            <!-- project details display -->
            <div id="project-details" class="col-md-8 drop-top">
                <!-- enter the contents of the project here. -->                
            	{% for project in project_searched %}
            		{% for proj in project %}
                        <div id="" class="display-div hide {{ 'item_'~loop.index0 }}">                        
                            {% include "default/render_content.html" %}                        
                        </div><!-- /.blog-post -->
                    {% endfor %}
                {% endfor %}                               
            </div>
            <!-- end #project-details -->

        </div>
    </div>
    <!-- end .container -->
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script type="text/javascript" src="{{ asset('js/on-off-display-div.js') }}" ></script>
{% endblock %}
